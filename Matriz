#include <iomanip>
#include <iostream>
using namespace std;

int main(){
int matriz [2][3];

cout<<"digite os numeros q vao compor a matriz";
  for (int i = 0;i < 2 ;i++){
      for (int j = 0; j < 3; j++){
          cout<<"digite um valor para ["<<i<<"] e ["<<j<<"]: ";
          cin>>matriz[i][j];
      }
  }
    
cout<<"\nMatriz digitada:\n ";
  for (int i = 0;i < 2; i++ ){
      for (int j = 0;j < 3;j++){
          
          cout<<setw(4)<<matriz[i][j]<< "  ";
      }
     cout<<endl; 
  }
  
    
    
    return 0;
    
    
}
